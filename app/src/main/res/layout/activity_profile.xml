<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- PAGE HEADER -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:text="ðŸŽ® EETAC BROS ðŸŽ®"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="User Profile"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- USER HEADER -->
        <LinearLayout
            android:id="@+id/userHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#DDDDDD"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/userAvatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="ðŸ‘¤"
                    android:textSize="32sp"
                    android:background="#FFFFFF"
                    android:padding="8dp"
                    android:layout_marginRight="12dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/memberSince"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Member since: -"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/totalCoins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coins: 0"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/totalScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Score: 0"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- NAV BAR -->
        <LinearLayout
            android:id="@+id/navBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="3">

                <Button
                    android:id="@+id/shopBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ›’ Shop" />

                <Button
                    android:id="@+id/gamesBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸŽ¯ Games" />

                <Button
                    android:id="@+id/settingsBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="âš™ï¸ Settings" />

            </LinearLayout>

            <!-- SECOND ROW BUTTONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/faqBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â“ FAQ"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/logoutBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Log Out"
                    android:layout_marginStart="4dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- CONTENT GRID -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp">

            <!-- RANKING SECTION -->
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#EEEEEE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="ðŸ†"
                        android:textSize="24sp"
                        android:layout_marginRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Global Ranking"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">
                        <TextView android:text="#" android:textStyle="bold" android:layout_width="30dp" android:layout_height="wrap_content"/>
                        <TextView android:text="User" android:textStyle="bold" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <TextView android:text="Score" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Dynamic Ranking List -->
                    <LinearLayout
                        android:id="@+id/rankingListContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <!-- Divider -->
                    <View android:id="@+id/rankDivider" android:layout_width="match_parent" android:layout_height="1dp" android:background="#999" android:layout_marginTop="4dp" android:layout_marginBottom="4dp" android:visibility="gone"/>

                    <!-- User Rank -->
                    <LinearLayout android:id="@+id/rankUserContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="4dp" android:visibility="gone">
                        <TextView android:id="@+id/rankUserPos" android:text="-" android:layout_width="30dp" android:layout_height="wrap_content"/>
                        <TextView android:id="@+id/rankUserUser" android:text="-" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <TextView android:id="@+id/rankUserScore" android:text="-" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#EEEEEE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="ðŸŽ’"
                        android:textSize="24sp"
                        android:layout_marginRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="My Inventory"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/inventoryRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:nestedScrollingEnabled="false"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
